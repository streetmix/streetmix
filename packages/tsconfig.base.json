{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Core */
    "target": "es2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/build",
    "types": [
      "node",
      /* Recognize test globals in test suites */
      "vitest/globals"
    ],

    /* Interoperability */
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Working in monorepo */
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,

    /* Typechecking and linting */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  },

  /* All packages use `src` as root directory. Must manually include
     json imports when extending from this config. */
  "include": ["${configDir}/src", "${configDir}/src/**/*.json"],

  /* Never compile test files */
  "exclude": ["${configDir}/src/**/*.test.ts"]
}
