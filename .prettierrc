{
  "overrides": [
    {
      "files": ["*.{js,jsx,ts,tsx,cjs,mdx}"],
      "options": {
        "trailingComma": "none",
        "semi": false,
        "singleQuote": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict"
      }
    },
    {
      "files": ["*.md,mdx"],
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
