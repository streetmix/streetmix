{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/"]
}
